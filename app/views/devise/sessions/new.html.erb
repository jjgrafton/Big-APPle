<div class="login-box"> 
  <h2 id="login-header">Log in</h2> 
 
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
    <%= f.input :email, placeholder: 'Enter email' %> 
    <%= f.input :password, placeholder: 'Password' %> 
    <%= f.button :submit %> 
  <% end %>

</div>

