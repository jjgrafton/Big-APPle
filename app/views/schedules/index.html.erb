<div class="create-box">
<p class="create-box-text">Let's plan your day</p>
</div>

<div class="choose-schedule-box">
<%= form_tag("/activities/index", method: "post") do %>
<%= label_tag :term, "Morning Museum Type" %>
<%= text_field_tag :term, nil, placeholder: 'e.g.art', class: 'input input-large' %>
<%= label_tag :location, "Hotel zipcode" %>
<%= text_field_tag :location, nil, placeholder: 'e.g. 10001', class: 'input' %>
<%= label_tag :lunch, "Lunch Cuisine" %>
<%= text_field_tag :lunch, nil, placeholder: 'enter one type of cuisine', class: 'input input-large' %>
<%= label_tag :term2, "Afternoon Museum Type" %>
<%= text_field_tag :term2, nil, placeholder: 'e.g. history', class: 'input' %>
<%= label_tag :dinner, "Dinner Cuisine" %>
<%= text_field_tag :dinner, nil, placeholder: 'enter one type of cuisine', class: 'input' %>

<%= submit_tag %>
<%end%>
</div>
